# Uncomment this line to define a global platform for your project
platform :ios, '15.5'

# CocoaPods analytics sends network stats synchronously affecting flutter build latency.
ENV['COCOAPODS_DISABLE_STATS'] = 'true'

project 'Runner', {
  'Debug' => :debug,
  'Profile' => :release,
  'Release' => :release,
}

def flutter_root
  generated_xcode_build_settings_path = File.expand_path(File.join('..', 'Flutter', 'Generated.xcconfig'), __FILE__)
  unless File.exist?(generated_xcode_build_settings_path)
    raise "#{generated_xcode_build_settings_path} must exist. If you're running pod install manually, make sure flutter pub get is executed first"
  end

  File.foreach(generated_xcode_build_settings_path) do |line|
    matches = line.match(/FLUTTER_ROOT\=(.*)/)
    return matches[1].strip if matches
  end
  raise "FLUTTER_ROOT not found in #{generated_xcode_build_settings_path}. Try deleting Generated.xcconfig, then run flutter pub get"
end

require File.expand_path(File.join('packages', 'flutter_tools', 'bin', 'podhelper'), flutter_root)

flutter_ios_podfile_setup

target 'Runner' do
  use_frameworks! :linkage => :static
  use_modular_headers!

  flutter_install_all_ios_pods File.dirname(File.realpath(__FILE__))

  # ML Kit para detecção facial nativa
  
end

# ========================================
# POST-INSTALL: Configurações finais dos pods
# ========================================
post_install do |installer|
  installer.pods_project.targets.each do |target|
    flutter_additional_ios_build_settings(target)

    target.build_configurations.each do |config|
      # ===== Correções de Assinatura =====
      config.build_settings['CODE_SIGNING_ALLOWED'] = 'NO'
      config.build_settings['CODE_SIGNING_REQUIRED'] = 'NO'

      # ===== Correções de Warnings =====
      # Corrige warnings com MLKit e sqflite_darwin
      config.build_settings['CLANG_WARN_QUOTED_INCLUDE_IN_FRAMEWORK_HEADER'] = 'NO'

      # Desativa Module Verifier (bug Xcode 15/16)
      config.build_settings['ENABLE_MODULE_VERIFIER'] = 'NO'

      # ===== Correções de Headers =====
      # Garante que Flutter.h seja encontrado
      config.build_settings['HEADER_SEARCH_PATHS'] ||= '$(inherited)'
      config.build_settings['HEADER_SEARCH_PATHS'] << ' $(PODS_ROOT)/Headers/Public'
      config.build_settings['HEADER_SEARCH_PATHS'] << ' $(PODS_ROOT)/Headers/Public/Flutter'
      config.build_settings['HEADER_SEARCH_PATHS'] << ' $(PODS_ROOT)/../Flutter/Frameworks'

      # ===== FIX: Suporte para Simulador iPad/iPhone =====
      # Exclui arm64 do simulador para evitar conflito com frameworks compilados apenas para device
      # Isso resolve o erro: "building for iOS-simulator, but linking in object file built for iOS"
      config.build_settings['EXCLUDED_ARCHS[sdk=iphonesimulator*]'] = 'arm64'

      # Permite arm64 em dispositivos físicos
      config.build_settings['VALID_ARCHS'] = 'arm64 x86_64'
      config.build_settings['ONLY_ACTIVE_ARCH'] = 'YES'

      # Define versão de deployment uniformemente (já definida no platform, mas garante)
      config.build_settings['IPHONEOS_DEPLOYMENT_TARGET'] = '15.5'

      # ===== FIX CRÍTICO: TensorFlow Lite Symbol Stripping =====
      # Previne o erro: "FAIL TO LOOKUP SYMBOL TFLITEINTERPRETEROPTIONSCREATE"
      # Referência: https://github.com/tensorflow/flutter-tflite/issues/221
      config.build_settings['STRIP_STYLE'] = 'non-global'
      config.build_settings['STRIP_INSTALLED_PRODUCT'] = 'NO'
      config.build_settings['COPY_PHASE_STRIP'] = 'NO'

      # Permite builds em Apple Silicon Macs
      config.build_settings['BUILD_LIBRARY_FOR_DISTRIBUTION'] = 'YES'
    end
  end

  # Configura EXCLUDED_ARCHS globalmente para o projeto de Pods
  installer.pods_project.build_configurations.each do |config|
    config.build_settings['EXCLUDED_ARCHS[sdk=iphonesimulator*]'] = 'arm64'
  end

  # Força regeneração de xcconfig
  installer.pods_project.save
end
